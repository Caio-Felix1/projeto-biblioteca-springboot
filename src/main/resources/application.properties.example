# Copie este arquivo para application.properties e preencha com as credenciais reais


# Nome da aplicação no Spring Boot
spring.application.name=sistemabiblioteca

# Porta HTTP da aplicação (padrão 8080)
server.port=8080

# Configuração de exemplo para conexão com MySQL
# Substitua os valores abaixo pelos dados reais do seu ambiente
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.datasource.url=jdbc:mysql://localhost:3306/sistemabiblioteca?useSSL=false&serverTimezone=UTC
spring.datasource.username=SEU_USUARIO
spring.datasource.password=SUA_SENHA

# Dialeto JPA para MySQL
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect

# Gera as tabelas automaticamente
spring.jpa.hibernate.ddl-auto=update

# Mostrar queries no console
spring.jpa.show-sql=true

# Perfis de execução do sistema
# test: utilizado para rodar os testes automatizados (JUnit). 
#       Esse perfil também executa o TestConfig, mas se o código dentro do método run(...) estiver comentado,
#       não haverá impacto nos testes. Caso existam trechos ativos, podem ocorrer erros durante a execução dos testes.
# dev: utilizado para rodar os seeders e é o perfil ideal para desenvolvimento e uso do sistema.

spring.profiles.active=nomedoperfil

# Configurações de exemplo para envio de e-mails com Spring Boot
# Substitua os valores abaixo pelos dados reais do seu servidor SMTP
spring.mail.host=smtp.exemplo.com
spring.mail.port=587
spring.mail.username=usuario_exemplo
spring.mail.password=senha_exemplo
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true

# Para que os links das imagens salvas localmente funcionem no front-end
spring.web.resources.static-locations=file:imagens/